<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F52C2A2A"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_violet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#B687BE"
        android:text="VIOLET"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#F5FDFDFD"
        android:textColorHighlight="#FAF1F1"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@id/tv_indigo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_indigo" />

    <TextView
        android:id="@+id/tv_green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#4CAF50"
        android:text="GREEN"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.85"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/tv_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:background="#E2E21414"
        android:text="RED"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_yellow"
        app:layout_constraintEnd_toStartOf="@id/tv_yellow"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_yellow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFEB3B"
        android:text="YELLOW"

        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_orange"
        app:layout_constraintEnd_toStartOf="@id/tv_orange"
        app:layout_constraintStart_toEndOf="@id/tv_red" />

    <TextView
        android:id="@+id/tv_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#2196F3"
        android:text="BLUE"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#F5FDFDFD"
        android:textColorHighlight="#FAF1F1"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@id/tv_green"
        app:layout_constraintStart_toEndOf="@id/tv_indigo"
        app:layout_constraintTop_toBottomOf="@+id/tv_green" />

    <TextView
        android:id="@+id/tv_indigo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#9C27B0"
        android:text="INDIGO"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#F5FDFDFD"
        android:textColorHighlight="#FAF1F1"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@id/tv_blue"
        app:layout_constraintStart_toEndOf="@id/tv_violet"
        app:layout_constraintTop_toBottomOf="@+id/tv_blue" />

    <TextView
        android:id="@+id/tv_orange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FF9800"
        android:text="ORANGE"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_green"
        app:layout_constraintEnd_toStartOf="@id/tv_green"
        app:layout_constraintStart_toEndOf="@id/tv_yellow" />

</androidx.constraintlayout.widget.ConstraintLayout>